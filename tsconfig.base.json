{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "env.d.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
